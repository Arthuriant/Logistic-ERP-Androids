<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Bagian Teks -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginEnd="8dp">

            <TextView
                android:id="@+id/tv_id_produk_exititem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Produk"
                android:textColor="#0056B7"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_bold" />

            <TextView
                android:id="@+id/tv_tanggalkeluar_exititem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal keluar: 12345"
                android:textColor="#444444"
                android:textSize="14sp"
                android:fontFamily="@font/poppins"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tv_id_jumlahkeluar_exititem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jumlah: 2"
                android:textColor="#444444"
                android:textSize="14sp"
                android:fontFamily="@font/poppins"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tv_id_HargaJual_exititem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Harga Jual: 2"
                android:textColor="#444444"
                android:textSize="14sp"
                android:fontFamily="@font/poppins"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Gambar Produk dibungkus CardView -->
        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_supplier"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.cardview.widget.CardView>
