<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    android:backgroundTint="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- TEKS -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginEnd="8dp">

            <TextView
                android:id="@+id/tv_Titlereport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plush Toy"
                android:textColor="#0056B7"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_bold" />

            <TextView
                android:id="@+id/tv_id_barangmasuk_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Barang Masuk : 0"
                android:textColor="#444444"
                android:textSize="14sp"
                android:fontFamily="@font/poppins"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/tv_id_barangkeluar_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Barang Keluar : 2"
                android:textColor="#444444"
                android:textSize="14sp"
                android:fontFamily="@font/poppins"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/tv_id_stokakhir_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stok : 5"
                android:textColor="#444444"
                android:textSize="14sp"
                android:fontFamily="@font/poppins"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <!-- GAMBAR -->
        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_teddy" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.cardview.widget.CardView>
