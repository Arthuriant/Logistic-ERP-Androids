<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="25dp">

    <!-- Nama Produk -->
    <TextView
        android:id="@+id/tv_titleform"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="Tambah Produk Kategori"
        android:textAlignment="center"
        android:textColor="#276577"
        android:textSize="34sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_categoryname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background"
        android:hint="Nama Kategori"
        android:inputType="text"
        android:minHeight="48dp"
        android:padding="10dp" />

    <!-- Kode Barang -->
    <EditText
        android:id="@+id/et_categorycode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@android:drawable/editbox_background"
        android:hint="Kode Kategori"
        android:inputType="text"
        android:minHeight="48dp"
        android:padding="10dp" />

    <!-- ID Kategori -->
    <EditText
        android:id="@+id/et_categorydescription"
        android:layout_width="match_parent"
        android:layout_height="106dp"
        android:layout_marginTop="8dp"
        android:background="@android:drawable/editbox_background"
        android:hint="Deskripsi Kategori"
        android:inputType="number"
        android:minHeight="48dp"
        android:padding="10dp" />

    <!-- Stok Minimum -->

    <!-- Harga Beli -->

    <!-- Harga Jual -->

    <!-- Tombol Simpan -->
    <Button
        android:id="@+id/btn_simpancategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#276678"
        android:text="Simpan"
        android:textColor="#FFFFFF" />
</LinearLayout>
