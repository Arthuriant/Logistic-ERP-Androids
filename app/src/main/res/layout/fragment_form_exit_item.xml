<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="25dp">

    <!-- Nama Produk -->
    <TextView
        android:id="@+id/tv_titleformexititem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="Tambah Item Keluar"
        android:textAlignment="center"
        android:textColor="#276577"
        android:textSize="34sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinnerProdukKeluar"
        android:layout_width="match_parent"
        android:layout_height="59dp" />

    <!-- Kode Barang -->
    <EditText
        android:id="@+id/et_tanggal_exititem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@android:drawable/editbox_background"
        android:hint="Tanggal Item Keluar"
        android:focusable="false"
        android:clickable="true"
        android:minHeight="48dp"
        android:padding="10dp" />




    <EditText
        android:id="@+id/et_Jumlah_exititem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@android:drawable/editbox_background"
        android:hint="Jumlah"
        android:inputType="number"
        android:minHeight="48dp"
        android:padding="10dp" />




    <Button
        android:id="@+id/btn_simpanexititem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#276678"
        android:text="Simpan"
        android:textColor="#FFFFFF" />
</LinearLayout>
