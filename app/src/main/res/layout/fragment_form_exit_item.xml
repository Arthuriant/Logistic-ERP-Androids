<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Header Biru -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/primary_blue"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="6dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Form Product Keluar"
            android:textColor="@android:color/white"
            android:textSize="40sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Form Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        android:layout_weight="2"
        android:background="@drawable/rounded_top_white"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Title -->
        <TextView
            android:id="@+id/tv_titleformexititem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:text="Tambah Item Keluar"
            android:textAlignment="center"
            android:textColor="#2F80ED"
            android:textSize="30sp"
            android:textStyle="bold" />

        <!-- Spinner Produk -->
        <Spinner
            android:id="@+id/spinnerProdukKeluar"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:fontFamily="@font/poppins" />

        <!-- Tanggal Keluar -->
        <EditText
            android:id="@+id/et_tanggal_exititem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@android:drawable/editbox_background"
            android:hint="Tanggal Item Keluar"
            android:focusable="false"
            android:clickable="true"
            android:minHeight="48dp"
            android:padding="10dp"
            android:fontFamily="@font/poppins" />

        <!-- Jumlah -->
        <EditText
            android:id="@+id/et_Jumlah_exititem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@android:drawable/editbox_background"
            android:hint="Jumlah"
            android:inputType="number"
            android:minHeight="48dp"
            android:padding="10dp"
            android:fontFamily="@font/poppins" />

        <!-- Tombol Simpan -->
        <Button
            android:id="@+id/btn_simpanexititem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="SIMPAN"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:backgroundTint="#2F80ED"
            android:fontFamily="@font/poppins_bold" />
    </LinearLayout>
</LinearLayout>
